@model SafeRouteInput





<h2>Safe Route Recommender</h2>

<h6>Enter from where you will go and where you are going and our algorithm will tell you the best path or places to look out!</h6>
<h6 class="text-danger">** Complex paths will be slow **</h6>

<form asp-controller="Home" asp-action="SafeRoute" method="post">

    <label asp-for="origin">Origin address:</label><input asp-for="origin" type="text" />
    <br />
    <label asp-for="destination">Destination address:</label><input asp-for="destination" type="text" />

    <button type="submit" value="Go!"></button>
</form>
