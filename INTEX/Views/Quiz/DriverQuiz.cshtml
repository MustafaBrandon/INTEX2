@{
    ViewData["Title"] = "Driver Quiz";
}

@model INTEX.Models.BuzzfeedQuestions

<header>
        <div class="col-5 ml-4 mt-3 text-center">
            <h1>Driver Personality Quiz</h1>
        </div>

        <script src="~/lib/bootstrap/dist/js/colorchange.js"></script>
        <link href="~/lib/bootstrap/dist/css/cc.css" rel="stylesheet" />
        <script src=
            "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
        </script>
        <script>
            $(document).ready(function() {
                $("button").click(function() {
                    $("html, body").animate({
                        scrollTop: $(
                          'html, body').get(0).scrollHeight
                    }, 2000);
                });
            });
        </script>

</header>

<div class="container mt-4 mb-5" style="width:60%">
@*    <div class="card">*@
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false" data-wrap="false">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
            </ol>

            <div class="carousel-inner">
                <form method="post" asp-controller="Quiz" asp-action="DriverQuiz">

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/img/dogs.webp" alt="Second slide">
                        <div class="carousel-caption" >
                            <h1 class="py-2" style="background-color: gray; opacity:75%">What type of dog are you?</h1>
                            <label class="col-6"></label>
                            <label class="col-6"><br /><br /></label>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                        </div>
                    </div>

                    <div class="carousel-item ">
                        <img class="d-block w-100" src="~/img/seatbelt.jpg" alt="First slide">
                        <div class="carousel-caption">
                            <h2 class="py-2" style="background-color: gray; opacity:75%">Do you wear a seatbelt?</h2>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <div class="row my-5 ">


                                <input type="radio" class="btn-check" asp-for="Question1" id="option1" autocomplete="off" value="seatbelt">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option1"><h4>Every time</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question1" id="option2" autocomplete="off" value="unrestrained">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option2"><h4>Only when I'm alone</h4></label>


                                <input type="radio" class="btn-check" asp-for="Question1" id="option3" autocomplete="off" value="unrestrained">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option3"><h4>Nope, not cool</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question1" id="option4" autocomplete="off" value="improper">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option4"><h4>Only the waist part</h4></label>


                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/cyclist.jpg" alt="Second slide">
                        <div class="carousel-caption">
                            <h2 class="py-2" style="background-color: gray; opacity:75%">Do you watch for cyclists?</h2>
                            <div class="row my-5 ">


                                <input type="radio" class="btn-check" asp-for="Question2" id="option5" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option5"><h4>I turn with reckless<br />abandon</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question2" id="option6" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option6"><h4>I'll keep an eye<br />on the bike lane</h4></label>


                                <input type="radio" class="btn-check" asp-for="Question2" id="option7" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option7"><h4>I love to cycle,<br />of course</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question2" id="option8" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option8"><h4>Not gonna lie,<br />not really..</h4></label>


                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/shibuya.jpg" alt="Second slide">
                        <div class="carousel-caption">
                            <h2 class="py-2" style="background-color: gray; opacity:85%">Do you check for pedestrians crossing?</h2>
                            <label><br /></label>

                            <div class="row my-5 ">


                                <input type="radio" class="btn-check" asp-for="Question3" id="option9" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option9"><h4>Always scanning</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question3" id="option10" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option10"><h4>Not my priority</h4></label>


                                <input type="radio" class="btn-check" asp-for="Question3" id="option11" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option11"><h4>I'll check before<br />I turn</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question3" id="option12" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option12"><h4>I want to see the<br />world burn</h4></label>


                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/dui.jpg" alt="Second slide">
                        <div class="carousel-caption">
                            <h2 class="py-2" style="background-color: gray; opacity:85%">Do you ever drink and drive?</h2>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <div class="row my-5 ">

                                <input type="radio" class="btn-check" asp-for="Question4" id="option13" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option13"><h4>Maybe once a month</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question4" id="option14" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option14"><h4>At least twice a week</h4></label>


                                <input type="radio" class="btn-check" asp-for="Question4" id="option15" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option15"><h4>Dry as BYU's campus</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question4" id="option16" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:85%; color:white" class="btn col-5 my-3 p-3 py-4" for="option16"><h4>Not even once</h4></label>


                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/age.png" alt="Second slide">
                        <div class="carousel-caption">
                            <h2 class="py-2" style="background-color: gray; opacity:75%">What's your age group?</h2>

                            <div class="row my-5 ">


                                <input type="radio" class="btn-check" asp-for="Question5" id="option17" autocomplete="off" value="teen">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option17"><h4>Fresh on the<br />roads (teens)</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question5" id="option18" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option18"><h4>Young, wild, and<br />free (20-34)</h4></label>


                                <input type="radio" class="btn-check" asp-for="Question5" id="option19" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option19"><h4>Still in my<br />prime (35-64)</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question5" id="option20" autocomplete="off" value="old">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option20"><h4>The Golden years<br />are here (65+)</h4></label>


                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/sleepy.jpg" alt="Second slide">
                        <div class="carousel-caption">
                            <h2 class="py-2" style="background-color: gray; opacity:75%">Do you ever drive while drowsy?</h2>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <div class="row my-5 ">


                                <input type="radio" class="btn-check" asp-for="Question6" id="option21" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option21"><h4>Not if I can help it</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question6" id="option22" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option22"><h4>I'm always drowsy</h4></label>


                                <input type="radio" class="btn-check" asp-for="Question6" id="option23" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option23"><h4>I pull over if sleepy</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question6" id="option24" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option24"><h4>Unfortunately yes</h4></label>


                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/phone.jpg" alt="Second slide">
                        <div class="carousel-caption">
                            <h2 class="py-2" style="background-color: gray; opacity:75%">How often do you check your phone while driving?</h2>

                            <div class="row my-5 ">


                                <input type="radio" class="btn-check" asp-for="Question7" id="option25" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option25"><h4>50 times in a <br /> 5-minute drive</h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question7" id="option26" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option26"><h4>Maybe once or twice <br /> at a red light</h4></label>


                                <input type="radio" class="btn-check" asp-for="Question7" id="option27" autocomplete="off" value="safe">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option27"><h4>On silent. Always. <br /> No exceptions. </h4></label>

                                <label class="col-2"></label>

                                <input type="radio" class="btn-check" asp-for="Question7" id="option28" autocomplete="off" value="danger">
                                <label style="background-color: gray; opacity:80%; color:white" class="btn col-5 my-3 p-3 py-4" for="option28"><h4>You know I always got <br /> that thang on me</h4></label>


                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/slide carousel.jpg" alt="Third slide">
                        <div class="carousel-caption">
                            <button type="submit" class="btn btn-info my-3 p-1 py-2 text-center col-6"><h1>Get Results!</h1></button>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <label class="col-6"><br /><br /></label>
                            <label class="col-6"></label>
                            <label class="col-6"></label>
                            <label class="col-6"></label>


                        </div>
                    </div>

                </form>
            </div>


            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
</div>

<br />

<div class="text-center">

    @if (ViewBag.Calculated == "1")
    {
        <img src="~/img/corgi.jfif" />
        <div class="card">
            <div class="card-header text-center">
                <h1>The beloved Corgi</h1>
            </div>
            <div class="card-body">
                <h5>
                    You are the model driver. You are courteous to others, and are
                    incapable of causing another driver unhappiness. While you may not
                    be perfect, you try to keep track of other people on the road and
                    do your duty to keep others, and yourself, safe.<br />
                    To stay sharp on your game, check out this link for more tips!
                </h5>
            </div>
        </div>
    }
    @if (ViewBag.Calculated == "2")
    {
        <img src="~/img/chihuahua.jpg" />
        <div class="card">
            <div class="card-header text-center">
                <h1>The scrappy Chihuahua</h1>
            </div>
            <div class="card-body">
                <h5>
                    People say you've got a lot of spunk, but what they really mean
                    is you've got a loud bark. And that's alright, everyone gets a little road
                    rage every now and then. The only thing that matters is that you keep
                    a cool head about you and think rationally. Keeping an eye out for others
                    on the road should keep you out of trouble. <br />
                    To stay sharp on your game, check out this link for more tips!
                </h5>
            </div>
        </div>

    }
    @if (ViewBag.Calculated == "3")
    {
        <img src="~/img/pitbull.jpg" />
        <div class="card">
            <div class="card-header text-center">
                <h1>The misunderstood Pitbull</h1>
            </div>
            <div class="card-body">
                <h5>
                    Some people might call you a bad driver, but that's really not the
                    case. You're not bad at driving, just easily distracted and have fun while
                    on the road. Though you might not have bad intentions, it's easy for people
                    to wind up getting hurt if you're not careful. Be mindful of others and
                    make sure to use that blinker!<br />
                    To stay sharp on your game, check out this link for more tips!
                </h5>
            </div>
        </div>
    }
    @if (ViewBag.Calculated == "4")
    {
        <img src="~/img/doberman.jfif" />
        <div class="card">
            <div class="card-header text-center">
                <h1>The wild Doberman</h1>
            </div>
            <div class="card-body">
                <h5>
                    You're not a bad person. But people might be scared to drive with you,
                    or around you. Your sharp movements on the road can startle other drivers.
                    You've been in a few fender-benders, but always end up okay. Nothing's convinced 
                    you to have better driving habits yet, but if you don't, it's only a matter
                    of time until someone gets seriously hurt in an accident. <br />
                    To stay sharp on your game, check out this link for more tips!
                </h5>
            </div>
        </div>
    }

</div>