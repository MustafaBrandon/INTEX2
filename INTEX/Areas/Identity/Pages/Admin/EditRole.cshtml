@page
@model INTEX.Areas.Identity.Pages.Admin.EditRoleModel

@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Areas/Identity/Pages/Admin/_AdminLayout.cshtml";
}


@*Not Ready for Production*@

<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-header form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control"/>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-body form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" disabled/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
        <div class="card">
            <div class="card-header">
                Users in this Role
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    @foreach (var user in Model.Users)
                    {
                        <h3>@User</h3>
                    }
                }
                else
                {
                    <h3>There are no users with this Role</h3>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-page="EditUsers" asp-route-roleId="@Model.Id">Edit Users in Role</a>
            </div>
        </div>
    </form>
</div>